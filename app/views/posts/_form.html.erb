<%= form_for(@post, url: community_posts_path(@community)) do |f| %>
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<!-- <h2><%#= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2> -->

			<ul>
			<% @post.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
		<%#= f.label :subject %><br>
		<%= f.text_field :subject, class: "form-control", placeholder: "Text line"  %>
	</div>

	<div class="form-group">
		<%#= f.label :body %><br>
		<%= f.text_area :body, class: "form-control", rows: "7", placeholder: "Content" %>
	</div>
	<div class="actions">
		<%= f.submit 'Send', class: "btn btn-primary pull-right" %>
	</div>
<% end %>
