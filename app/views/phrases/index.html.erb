<h1>Listing Phrases</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phrases.each do |phrase| %>
      <tr>
        <td><%= link_to 'Show', user_phrase_path(phrase.user, phrase) %></td>
        <td><%= link_to 'Edit', edit_user_phrase_path(phrase.user, phrase) %></td>
        <td><%= link_to 'Destroy', user_phrase_path(phrase.user, phrase), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phrase', new_user_phrase_path %>
