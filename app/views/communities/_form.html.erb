<%= form_for([@user, @community])do |f| %>
  <% if @community.errors.any? %>
    <div id="error_explanation">
      <!-- <h2><%#= pluralize(@community.errors.count, "error") %> prohibited this community from being saved:</h2> -->

      <ul>
      <% @community.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= image_tag @community.image.url(:medium) %>
  </div>

  <div class="form-group">
    <div class="controls">
      <%= f.file_field :image, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
