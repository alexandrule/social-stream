<%= form_for([@user, @community])do |f| %>
  <% if @community.errors.any? %>
    <div id="error_explanation">
      <!-- <h2><%#= pluralize(@community.errors.count, "error") %> prohibited this community from being saved:</h2> -->

      <ul>
      <% @community.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :phrase, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <p>Where do you want to show your phrase in your sentence?</p>
      </div>
      <div class="col-md-3">
        <label class="radio-inline">
          <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"> At the beginning
        </label>
        <p>Example: S world</p>
      </div>
      <div class="col-md-3">
        <label class="radio-inline">
          <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> At the end
        </label>
        <p>Example: World S</p>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-1">
        <p>http://</p>
      </div>
      <div class="col-md-9">
        <input type="text" class="form-control" placeholder="s">
      </div>
      <div class="col-md-2">
        <p>.setphrase.com</p>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= image_tag @community.image.url(:medium) %>
  </div>

  <div class="form-group">
    <div class="controls">
      <%= f.file_field :image, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
