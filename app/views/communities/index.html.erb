<h1>Listing Communities</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= link_to community.name, user_community_path(community.owner_id, community) %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', user_community_path(community.owner_id, community) %></td>
          <td><%= link_to 'Edit', edit_user_community_path(community.owner_id, community) %></td>
          <td><%= link_to 'Destroy', user_community_path(community.owner_id, community), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Community', new_user_community_path if user_signed_in? %>
